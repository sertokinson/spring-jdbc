<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <context:component-scan base-package="ru.sertok.spring.jdbc"/>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="username" value="postgres"/>
        <property name="url" value="jdbc:postgresql://127.0.0.1:5432/jdbc"/>
        <property name="password" value="12355789"/>
    </bean>

    <bean id="/users" class="ru.sertok.spring.jdbc.controllers.UsersController"/>
    <bean id="/home" class="ru.sertok.spring.jdbc.controllers.HomeController"/>
    <bean id="/login" class="ru.sertok.spring.jdbc.controllers.LoginController"/>
    <bean id="/signUp" class="ru.sertok.spring.jdbc.controllers.SignUpController"/>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <mvc:resources mapping="/css/styles.css" location="/css"/>
</beans>